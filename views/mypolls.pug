html
  head
    title= title
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/welcome.css', type='text/css')
    script(src='https://code.jquery.com/jquery-3.1.0.min.js', charset='utf-8')
    script(type="text/javascript" src="/common/ajax-functions.js")
    
  body
    div.container-fluid.menubar
      div(class='col-xs-4')
        a#appTitle(style='font-size: 24px; font-weight: bold', href='/') VotingApp
      div(class='col-xs-4')
        p.inv= name
      div(class='col-xs-4 logout')
        div.col-xs-3
          a#myPolls(href='/mypolls') My Polls
        div.col-xs-3
          a#newPoll(href='/newpoll') New Poll
        div.col-xs-2
          a.signup.btn.btn-large.btn-primary(href='/logout') log out
    
    div.container

      
      div.list-group
      #values
      #display
        each val, index in values
              a(href='/mypolls/' + display[index], class='list-group-item') #{val}